{
  "name": "@keithk/deploy",
  "version": "0.1.0",
  "description": "A simple way to deploy websites with automatic SSL and subdomains",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "deploy": "./dist/cli/index.js",
    "dd": "./dist/cli/index.js"
  },
  "scripts": {
    "start": "bun run dist/cli/index.js start",
    "dev": "bun run build:watch",
    "build": "bun run clean && bun run build:tsc && bun run build:bundle",
    "build:tsc": "tsc",
    "build:bundle": "bun run build:main && bun run build:cli",
    "build:main": "bun build src/index.ts --outfile dist/index.js --target bun --minify",
    "build:cli": "bun build src/cli/index.ts --outdir dist/cli --target bun --minify",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "test": "bun test",
    "cli:dev": "bun run src/index.ts dev",
    "cli:build": "bun build src/index.ts --outdir dist --target bun --minify",
    "server:dev": "bun run src/index.ts",
    "server:build": "bun build src/index.ts --outdir dist --target bun --minify",
    "core:build": "bun build src/index.ts --outdir dist --target bun --minify",
    "actions:build": "bun build src/index.ts --outdir dist --target bun --minify"
  },
  "keywords": [
    "bun",
    "deploy",
    "static-site",
    "ssl",
    "subdomain",
    "hosting"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "croner": "^9.0.0",
    "fs-extra": "^11.2.0",
    "hono": "^4.0.0",
    "inquirer": "^9.2.15",
    "ora": "^8.0.1",
    "simple-git": "^3.28.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@types/node": "^20.17.32",
    "bun-plugin-dtsx": "^0.21.9",
    "bun-types": "latest",
    "typescript": "^5.8.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
